# POS Monitoring System - Environment Configuration
# Copy this file to .env and configure your settings

# =================================================================
# ALERT CONFIGURATION
# =================================================================

# Email Alerts
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=admin@example.com,ops@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Alerts (comma-separated URLs)
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URLS=https://your-webhook-url.com/alerts

# Slack Alerts
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# =================================================================
# MONITORING CONFIGURATION
# =================================================================

# Authentication token for protected monitoring endpoints
MONITORING_AUTH_TOKEN=

# Monitoring intervals (milliseconds)
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_METRICS_INTERVAL=60000

# Performance thresholds
RESPONSE_TIME_WARNING=1000
RESPONSE_TIME_CRITICAL=2000
MEMORY_USAGE_WARNING=0.80
MEMORY_USAGE_CRITICAL=0.95
ERROR_RATE_WARNING=0.01
ERROR_RATE_CRITICAL=0.05

# =================================================================
# RAILWAY CONFIGURATION
# =================================================================

# These are usually set automatically by Railway
# RAILWAY_SERVICE_ID=
# RAILWAY_ENVIRONMENT_ID=
# RAILWAY_PROJECT_ID=
# RAILWAY_DEPLOYMENT_ID=
# RAILWAY_PUBLIC_DOMAIN=
# RAILWAY_GIT_COMMIT=
# RAILWAY_GIT_BRANCH=
# RAILWAY_ENVIRONMENT=

# Custom deployment URL (if different from Railway domain)
DEPLOYMENT_URL=

# =================================================================
# APPLICATION CONFIGURATION  
# =================================================================

# Database connection (usually set by Railway)
# DATABASE_URL=

# JWT Secret for authentication
# JWT_SECRET=

# Node environment
NODE_ENV=production

# Port (usually set by Railway)
PORT=3000

# =================================================================
# NOTIFICATION PREFERENCES
# =================================================================

# Alert cooldown periods (milliseconds)
ALERT_COOLDOWN_CRITICAL=300000  # 5 minutes
ALERT_COOLDOWN_WARNING=600000   # 10 minutes
ALERT_COOLDOWN_INFO=1800000     # 30 minutes

# Enable/disable specific alert types
ENABLE_HEALTH_ALERTS=true
ENABLE_PERFORMANCE_ALERTS=true
ENABLE_ERROR_ALERTS=true
ENABLE_DEPLOYMENT_ALERTS=true
ENABLE_SECURITY_ALERTS=true

# =================================================================
# RETENTION SETTINGS
# =================================================================

# How long to keep different types of data
METRICS_RETENTION_HOURS=24
ERROR_LOG_RETENTION_DAYS=7
ALERT_HISTORY_RETENTION_DAYS=30
PERFORMANCE_DATA_RETENTION_DAYS=30

# =================================================================
# ADVANCED SETTINGS
# =================================================================

# Maximum log file size (bytes)
MAX_LOG_FILE_SIZE=10485760  # 10MB

# Maximum number of log files to keep
MAX_LOG_FILES=10

# Request timeout for health checks (milliseconds)
HEALTH_CHECK_TIMEOUT=10000

# Number of retries for failed requests
REQUEST_RETRIES=3

# Enable debug logging
DEBUG_LOGGING=false

# =================================================================
# CUSTOM ENDPOINTS
# =================================================================

# Additional endpoints to monitor (comma-separated)
CUSTOM_HEALTH_ENDPOINTS=

# Custom webhook for deployment notifications
DEPLOYMENT_WEBHOOK_URL=

# Custom dashboard refresh interval (milliseconds)
DASHBOARD_REFRESH_INTERVAL=30000